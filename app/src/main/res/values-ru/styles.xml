<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Text items-->

    <style name="MainText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MainText.Bold" parent="MainText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText.MainTemp" parent="MainText.Bold">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="MainText.MainCity" parent="MainText.Bold">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="MainText.MainCondition" parent="MainText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="DetailsText" parent="MainText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DetailsText.TempLow" parent="MainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#C9B3B3</item>
    </style>

    <!--Icons-->

    <style name="MainWeatherIcon">
        <!--<item name="android:gravity">center</item>-->
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

</resources>
